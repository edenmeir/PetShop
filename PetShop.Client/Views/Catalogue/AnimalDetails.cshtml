@model AnimalDetailsViewModel

@{
    ViewData["Title"] = "Animal Details";
}

<div class="container">
    <h1>Animal Details</h1>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.AnimalName</h3>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Age</th>
                        <td>@Model.Age</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>@Model.CategoryName</td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Comments</h3>

            <table class="table">
                <thead>
                    <tr>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model.Comments)
                    {
                        <tr>
                            <td>@comment.Comment1</td>
                        </tr>
                    }
                </tbody>
            </table>
            <h4>Add Comment</h4>
            <form method="post" asp-controller="AnimalDetail" asp-action="AddComment">
                <input type="hidden" asp-for="AnimalId" />

                <div class="form-group">
                    <label asp-for="CommentText">Comment:</label>
                    <input asp-for="CommentText" class="form-control" required />
                    <span asp-validation-for="CommentText" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Add Comment</button>
            </form>
        </div>
    </div>
</div>
