@model AnimalFormModel;


<div class="main-form">
    @using (Html.BeginForm("Index", "AddAnimal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="text-danger">@Model.NameValidator</div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Animal Name</span>
            </div>
            <input name="Name" maxlength="50" type="text" class="form-control" value="@Model.Name">
        </div>
        

        <div class="text-danger">@Model.AgeValidator</div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Animal Age</span>
            </div>
            <input name="Age" type="number" min="0" class="form-control">
        </div>

        <div class="text-danger">@Model.DescriptionValidator</div>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Description</span>
            </div>
            <input name="Description" type="text" class="form-control">
        </div>

        <div class="text-danger">@Model.CategoryValidator</div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupSelect01">Category</label>
            </div>
            <select name="Category" class="custom-select" id="inputGroupSelect01">
                <option>--- Select Category ---</option>
                @foreach(var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            </select>
        </div>

        <div class="text-danger">@Model.PictureValidator</div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input name="Picture" type="file" class="form-control" id="inputGroupFile01">
            </div>
        </div>

        <div class="form-control-sm">
            <input type="submit" class="btn btn-primary" />
        </div>
    }
</div>

